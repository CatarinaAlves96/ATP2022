res = []
import random
n = int(input("Escolha uma opção:"))

while n != 0:
        print("""(1) Criar Lista
(2) Ler Lista
(3) Soma
(4) Média
(5) Maior
(6) Menor
(7) estaOrdenada por ordem crescente
(8) estaOrdenada por ordem decrescente
(9) Procura um elemento
(0) Sair""")
        if n == 1:
            for num in range(1,101):
                res.append(random.randrange(1,101))
            n = int(input("Escolha uma opção:"))
        elif n == 2:
            res = []
            count = 0
            N = int(input("Introduza o número de elementos:"))
            while count < N:
                num = int(input("Introduza o elemento:"))
                res.append(num)
                count = count + 1
            n = int(input("Escolha uma opção:"))
        elif n == 3:
            soma = 0
            for num in res:
                soma = soma + num
            print(soma)
            n = int(input("Escolha uma opção:"))
        elif n == 4:
            soma = 0
            for num in res:
                soma = soma + num
                media = soma // len(res)
            print(media)
            n = int(input("Escolha uma opção:"))
        elif n == 5:
            maior = res[0]
            for num in res[1:]:
                if num > maior:
                    maior = num
            print(maior)
            n = int(input("Escolha uma opção:"))
        elif n == 6:
            menor = res[0]
            for num in res[1:]:
                if num < menor:
                    menor = num
            print(menor)
            n = int(input("Escolha uma opção:"))
        elif n == 7:
            cres = "Sim"
            copylista = res.copy()
            copylista.sort()
            if res != copylista:
                cres = "Não"
            print(cres)
            n = int(input("Escolha uma opção:"))
        elif n == 8:
            decres = "Sim"
            copylista = res.copy()
            copylista.sort(reverse=True)
            if res != copylista:
                decres = "Não"
            print(decres)
            n = int(input("Escolha uma opção:"))
        elif n == 9:
            elem = int(input("Elemento:"))
            if elem in res:
                indx = res.index(elem)
            else:
                indx = -1
            print(indx)
            n = int(input("Escolha uma opção:"))
if n == 0:
    print(res)
